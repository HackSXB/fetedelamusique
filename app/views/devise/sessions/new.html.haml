= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
  %h2.form-signin-heading S'identifier
  = f.email_field :email, :autofocus => true, :placeholder => t("mongoid.attributes.user.email")
  = f.password_field :password, :placeholder => t("mongoid.attributes.user.password")
  %br
  - if devise_mapping.rememberable?
    = f.check_box :remember_me, :class => "pull-left"
    = f.label :remember_me, :class => "pull-left", :style => "margin-left:5px;"
  .clearfix
  = f.button "Se connecter", :class => "btn btn-large btn-primary"
  %br
  %br
  = render "devise/shared/links"


