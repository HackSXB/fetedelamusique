= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  %h2.form-signin-heading Créer un compte
  = devise_error_messages!
  = f.email_field :email, :autofocus => true, :placeholder => t("mongoid.attributes.user.email")
  = f.password_field :password, :placeholder => t("mongoid.attributes.user.password")
  = f.password_field :password_confirmation, :placeholder => t("mongoid.attributes.user.password_confirmation")
  .clearfix
  = f.button "Créer mon compte", :class => "btn btn-large btn-primary"
  %br
  %br
  = render "devise/shared/links"


